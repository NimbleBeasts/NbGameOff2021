	    COLOR.rgb = vec3(COLOR.r * 0.1 + avg * 0.4, COLOR.g * 0.1 + avg * 0.4, COLOR.b * 0.3 + avg * 0.7);
	} else {
		COLOR = COLOR
	}
}"

